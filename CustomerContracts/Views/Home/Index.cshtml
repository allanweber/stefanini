@using CustomerContracts.Models;

@model CustomersViewModel

<div class="panel panel-default margin-10">
    <div class="panel-heading">Search...</div>
    <div class="panel-body">
        <div class="row">

            <div class="col-md-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchName, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.SearchName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchCityId, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SearchCityId,
                            new SelectList(Model.Cities, "Id", "Name"), "Choose... ", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchInitialDate, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            <div class="input-group date">
                                <input type="text" id="SearchInitialDate" class="form-control mask-me"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchClassificationId, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SearchClassificationId,
                            new SelectList(Model.Classifications, "Id", "Name"), "Choose... ", new { @class = "form-control" })
                        </div>
                    </div>

                </form>
            </div>

            <div class="col-md-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchGenderId, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SearchGenderId,
                            new SelectList(Model.Genders, "Id", "Name"), "Choose... ", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchRegionId, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.SearchRegionId,
                            new SelectList(Model.Regions, "Id", "Name"), "Choose... ", new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SearchFinalDate, htmlAttributes: new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            <div class="input-group date">
                                <input type="text" id="SearchFinalDate" class="form-control mask-me"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>

                    </div>

                    @if (ViewBag.IsAdmin)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.SearchUserId, htmlAttributes: new { @class = "col-md-4 control-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.SearchUserId,
                             new SelectList(Model.Sellers, "Id", "Login"), "Choose... ", new { @class = "form-control" })
                            </div>
                        </div>
                    }

                </form>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <div class="text-center">
            <button type="button" class="btn btn-primary" id="searchButton">Search</button>
            <button type="button" class="btn btn-default" id="clearButton">Clear Fields</button>
        </div>
    </div>
</div>

<div class="row">
    <table class="table table-striped table-hover table-bordered" id="dataTable">
        <thead>
            <tr>
                <th>
                    Classification
                </th>
                <th>
                    Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                    Gender
                </th>
                <th>
                    City
                </th>
                <th>
                    Region
                </th>
                <th>
                    LastPurchase
                </th>
                @if (ViewBag.IsAdmin)
                {
                    <th>
                        Seller
                    </th>
                }
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Scripts/app.index.js"></script>
}

